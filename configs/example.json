{
  "$schema": "./schema.json",
  "_comment": "CERA Configuration File - Restaurant Domain Example",

  "subject_profile": {
    "query": "The Keg Steakhouse",
    "region": "canada",
    "category": "restaurant",
    "custom_schema": null,
    "seed_subject": null,
    "feature_count": "5-10",
    "sentiment_depth": "praise and complain",
    "context_scope": "typical dining experiences, food quality, service, ambiance, value"
  },

  "reviewer_profile": {
    "age_range": [18, 65],
    "sex_distribution": {
      "male": 0.45,
      "female": 0.45,
      "unspecified": 0.10
    },
    "audience_context": [
      "regular diners",
      "food enthusiasts",
      "business lunch customers",
      "special occasion celebrators"
    ],
    "additional_context": "The Keg is an upscale steakhouse, so reviewers are typically middle to upper-class diners who appreciate quality cuts of beef. They expect good service and ambiance for the premium prices. Complaints are usually about wait times or overcooked steaks, not about the prices being too high.",
    "seed_datasets": null
  },

  "attributes_profile": {
    "polarity": {
      "positive": 0.65,
      "neutral": 0.15,
      "negative": 0.20
    },
    "noise": {
      "typo_rate": 0.01,
      "colloquialism": true,
      "grammar_errors": true
