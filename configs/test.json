{
  "_comment": "CERA Test Configuration - Quick test with 10 reviews",

  "subject_profile": {
    "query": "iPhone 15 Pro",
    "region": "united states",
    "category": "electronics",
    "feature_count": "5-10",
    "sentiment_depth": "praise and complain",
    "context_scope": "daily use, photography, performance"
  },

  "reviewer_profile": {
    "age_range": [18, 55],
    "sex_distribution": {
      "male": 0.45,
      "female": 0.45,
      "unspecified": 0.10
    },
    "audience_context": [
      "tech enthusiasts",
      "casual users",
      "photographers"
    ]
  },

  "attributes_profile": {
    "polarity": {
      "positive": 0.60,
      "neutral": 0.20,
      "negative": 0.20
    },
    "noise": {
      "typo_rate": 0.01,
      "colloquialism": true,
      "grammar_errors": true
    },
    "length_range": [2, 4],
    "temp_range": [0.7, 0.9]
  },

  "generation": {
    "count": 10,
    "batch_size": 5,
    "request_size": 3,
    "mode": "single-provider",
    "provider": "anthropic",
    "model": "claude-sonnet-4"
  },

  "output": {
    "formats": ["jsonl"],
    "directory": "./output/test",
    "include_metadata": true
  }
}
